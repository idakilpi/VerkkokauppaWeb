<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/d30ec3a79a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="logoNavbar">
        <img class="navLogo" src="~/Images/JetisideLogoValm3.png" />
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark navEdit" >
            <div class="container">
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="display: flex;">
                        <li class="btn"><a class="nav-link zoom" href="~/home/Index">Etusivu</a></li>
                        <li class="btn"><a class="nav-link zoom" href="~/home/About">Meistä</a></li>
                        <li class="btn"><a class="nav-link zoom" href="~/tuotteet/index">Tuotteet</a></li>
                        @if (Session["UserName"] == null) {
                        <li class="btn"><a class="nav-link" data-bs-toggle="modal" data-bs-target="#LoginRuutu">Kirjaudu</a></li>
                         }
                         
                    </ul>
                    <div class="navbar-nav toSide">

                        @if (Session["UserName"] != null)
                        {
                            <a class="nav-link zoom" href="#" style="padding:15px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                </svg>
                                @Session["UserName"]
                            </a>

                        }
                        <div class="btn">
                            @{
                                Html.RenderPartial("_Ostoskori");
                            }
                        </div>

                        @if (Session["UserName"] != null)
                        {
                            <div class="btn out">
                                <a class="nav-link zoom" href="/Home/Logout">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                    </svg>
                                </a>
                            </div>
                            
                        }
                        <div class="container-input">
                            <input type="text" placeholder="Etsi" name="text" class="input">
                            <svg fill="#000000" width="20px" height="20px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                <path d="M790.588 1468.235c-373.722 0-677.647-303.924-677.647-677.647 0-373.722 303.925-677.647 677.647-677.647 373.723 0 677.647 303.925 677.647 677.647 0 373.723-303.924 677.647-677.647 677.647Zm596.781-160.715c120.396-138.692 193.807-319.285 193.807-516.932C1581.176 354.748 1226.428 0 790.588 0S0 354.748 0 790.588s354.748 790.588 790.588 790.588c197.647 0 378.24-73.411 516.932-193.807l516.028 516.142 79.963-79.963-516.142-516.028Z" fill-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="row footerNav">
            <div class="col-md-3 footerNavCol">
                <ul>
                    <li><a href="#">Etusivu</a></li>
                    <li><a href="#">Meistä</a></li>
                    <li><a href="#">Tuotteet</a></li>
                    <li><a href="#">Kirjaudu</a></li>
                </ul>
            </div>
            <div class="col-md-3 footerNavCol">
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">Tiktok</a></li>
                    <li><a href="#">Twitter</a></li>
                </ul>
            </div>
            <div class="col-md-3 footerNavCol footerMove" >
                <ul>
                    <li><a href="#">Seikkailijanpolku 3</a></li>
                    <li><a href="#">58030</a></li>
                    <li><a href="#">Jetilä</a></li>
                    <li><a href="#">Puh. 050 1234 567</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <p>&copy; @DateTime.Now.Year - Jetiside</p>
            </div>
        </div>
        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
