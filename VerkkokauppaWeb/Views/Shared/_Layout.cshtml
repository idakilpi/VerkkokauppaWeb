<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="logoNavbar">
        <img class="navLogo" src="~/Images/JetisideLogoValm3.png" />
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark navEdit" >
            <div class="container">
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="display: flex;">
                        <li class="btn"><a class="nav-link" href="~/home/Index">Etusivu</a></li>
                        <li class="btn"><a class="nav-link" href="~/home/About">Meistä</a></li>
                        <li class="btn"><a class="nav-link" href="~/tuotteet/index">Tuotteet</a></li>
                        <li class="btn"><a class="nav-link" href="~/home/Index">Ostoskori</a></li>
                        @if (Session["UserName"] == null) {
                        <li class="btn"><a class="nav-link" data-bs-toggle="modal" data-bs-target="#LoginRuutu">Kirjaudu</a></li>
                         }
                         
                    </ul>
                    <div class="navbar-nav flex-grow-1 toSide">
                        @if (Session["UserName"] != null)
                        {
                            <div class="btn"><a class="nav-link">@Session["UserName"]</a></div>
                        }
                        <div class="container-input">
                            <input type="text" placeholder="Etsi" name="text" class="input">
                            <svg fill="#000000" width="20px" height="20px" viewBox="0 0 1920 1920" xmlns="http://www.w3.org/2000/svg">
                                <path d="M790.588 1468.235c-373.722 0-677.647-303.924-677.647-677.647 0-373.722 303.925-677.647 677.647-677.647 373.723 0 677.647 303.925 677.647 677.647 0 373.723-303.924 677.647-677.647 677.647Zm596.781-160.715c120.396-138.692 193.807-319.285 193.807-516.932C1581.176 354.748 1226.428 0 790.588 0S0 354.748 0 790.588s354.748 790.588 790.588 790.588c197.647 0 378.24-73.411 516.932-193.807l516.028 516.142 79.963-79.963-516.142-516.028Z" fill-rule="evenodd"></path>
                            </svg>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="row footerNav">
            <div class="col-md-3 footerNavCol">
                <ul>
                    <li><a href="#">Etusivu</a></li>
                    <li><a href="#">Meistä</a></li>
                    <li><a href="#">Tuotteet</a></li>
                    <li><a href="#">Kirjaudu</a></li>
                </ul>
            </div>
            <div class="col-md-3 footerNavCol">
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">Tiktok</a></li>
                    <li><a href="#">Twitter</a></li>
                </ul>
            </div>
            <div class="col-md-3 footerNavCol footerMove" >
                <ul>
                    <li><a href="#">Seikkailijanpolku 3</a></li>
                    <li><a href="#">58030</a></li>
                    <li><a href="#">Jetilä</a></li>
                    <li><a href="#">Puh. 050 1234 567</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <p>&copy; @DateTime.Now.Year - Jetiside</p>
            </div>
        </div>
        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
