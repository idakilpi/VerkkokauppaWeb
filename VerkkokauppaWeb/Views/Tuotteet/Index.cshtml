@*@model IEnumerable<VerkkokauppaWeb.Models.Tuotteet>*@
@*@model VerkkokauppaWeb.ViewModels.TuotteetAndLoginsViewModel*@

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <h2>Tuotevalikoima</h2>
    <br />
    <br />
    <div>
        <button class="btn btn-success">
            @Html.ActionLink("Luo uusi tuote", "Create")
        </button>
    </div>
    <br />
    <br />
    <div class="row">
        @foreach (var tuot in Model.Tuotteet)
        {
            <div class="col-lg-3">
                <div class="card mb-3">
                    <h3 class="card-header text-bg-success">@tuot.Nimi</h3>

                    @if (tuot.Kuva != null)
                    {
                        var base64 = Convert.ToBase64String(tuot.Kuva);
                        var imgscr = string.Format("data:image/jpg;base64,{0}", base64);
                        <img style="height:200px; width:100%; display:block;" src="@imgscr" alt="Kuva tuotteesta">
                    }
                    else
                    {
                        <img src="~/Icons/cart.svg" style="height:200px; width:100%; display:block;" />
                    }


                    <div class="card-body">
                        <p class="card-text">@tuot.Hinta</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@tuot.Kuvaus</li>
                        <li class="list-group-item">Varastomäärä: @tuot.Varastomaara</li>
                        <li class="list-group-item">Kategoria: @tuot.Kategoriat.Nimi</li>
                        <li class="btn btn-primary">Lisää tuote ostoskoriin<img src="~/Icons/cart.svg"></li>
                    </ul>
                    <div class="card-footer text-bg-success">
                        @Html.ActionLink("Muokkaa", "Edit", new { id = tuot.TuoteID }) |
                        @Html.ActionLink("Lisätiedot", "Details", new { id = tuot.TuoteID }) |
                        @Html.ActionLink("Poista", "Delete", new { id = tuot.TuoteID })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@{
    Html.RenderPartial("_LoginModal");
}


