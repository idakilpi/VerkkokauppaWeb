@model VerkkokauppaWeb.Models.Tuotteet

@{
    ViewBag.Title = "Delete";
}

<h2>Poista tuote</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.TuoteNimi)</dt>

        <dd>@Html.DisplayFor(model => model.TuoteNimi)</dd>

        <dt>@Html.DisplayNameFor(model => model.Hinta)</dt>

        <dd>@Html.DisplayFor(model => model.Hinta)</dd>

        <dt>@Html.DisplayNameFor(model => model.Varastomaara)</dt>

        <dd>@Html.DisplayFor(model => model.Varastomaara)</dd>

        <dt>@Html.DisplayNameFor(model => model.Kuvaus)</dt>

        <dd>@Html.DisplayFor(model => model.Kuvaus)</dd>

        <dt>@Html.DisplayNameFor(model => model.Kuva)</dt>

        <dd>
            @if (Model.Kuva != null)
            {
                var base64 = Convert.ToBase64String(Model.Kuva);
                var imgscr = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="width:50%;" src="@imgscr" alt="Kuva tuotteesta">
            }
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Kategoriat.KategoriaNimi)</dt>

        <dd>@Html.DisplayFor(model => model.Kategoriat.KategoriaNimi)</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Poista" class="btnn deleteBtn" />
            <button class="btnn backBtn">@Html.ActionLink("Takaisin", "Index")</button>
        </div>
    }
</div>
